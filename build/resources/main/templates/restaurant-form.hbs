{{#partial "content"}}

    {{#if editRestaurant}}
        <h1>Edit this Restaurant!</h1>
        <form action="/restaurants/update" method="post">
            <select name="editRestaurantId" id="editRestaurantId">
                {{#each restaurant }}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <label for="name">Edit this Restaurant's name</label>
            <input id="newRestaurantName" name="newRestaurantName" type="text" placeholder="new restaurant name">
            <label for="location">Edit this Restaurant's location</label>
            <input id="newRestaurantLocation" name="newRestaurantLocation" type="text" placeholder="new restaurant location">


    {{else}}
            <h1>Add a new Restaurant!</h1>

        <form action="/restaurants/new" method="post">
            <label for="name">Restaurant Name</label>
            <input id="name" name="name" type="text">
        </br>
        </br>
            <label for="location">Restaurant Location</label>
            <input id="location" name="location" type="text">
        </br>
        <br>
    {{/if}}
        <button type="submit" class="btn btn-default"> Add this Restaurant</button>
    </form>
{{/partial}}

{{> layout.hbs}}